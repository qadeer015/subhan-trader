<!-- views/pages/shipping-and-delivery.ejs -->
<%- include('../partials/_header') %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-12">
      <div class="card shadow">
        <div class="card-body p-lg-5">
          <h1 class="text-center mb-4">Shipping & Delivery</h1>
          <p class="text-center text-muted mb-5">Reliable delivery of IBC tanks, containers, and Sumandri Jhag across Pakistan</p>

          <div class="alert alert-primary">
            <h4 class="alert-heading"><i class="bi bi-truck me-2"></i>Industrial Product Delivery Specialists</h4>
            <p class="mb-0">We handle heavy/large items with proper equipment and safety measures - unlike standard couriers.</p>
          </div>

          <!-- Delivery Coverage -->
          <div class="mb-5">
            <h2 class="mb-3 border-bottom pb-2">Delivery Coverage & Timelines</h2>
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead class="table-light">
                  <tr>
                    <th>Area</th>
                    <th>Delivery Time</th>
                    <th>Cost</th>
                    <th>Weight Limit</th>
                    <th>Service</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Lahore (City)</td>
                    <td>1-2 business days</td>
                    <td>Free (Orders >PKR 50,000)</td>
                    <td>Up to 5,000 kg</td>
                    <td>Our dedicated trucks with forklift</td>
                  </tr>
                  <tr>
                    <td>Punjab (Major Cities)</td>
                    <td>2-4 business days</td>
                    <td>PKR 2,500-7,500</td>
                    <td>Up to 2,000 kg</td>
                    <td>Partner logistics (TCS/Leopards)</td>
                  </tr>
                  <tr>
                    <td>Sindh/KPK</td>
                    <td>4-7 business days</td>
                    <td>PKR 5,000-15,000</td>
                    <td>Up to 1,500 kg</td>
                    <td>Specialized freight</td>
                  </tr>
                  <tr>
                    <td>Balochistan/AJK</td>
                    <td>7-14 business days</td>
                    <td>Quote required</td>
                    <td>Case by case</td>
                    <td>Custom arrangements</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="mt-3 p-3 bg-light rounded">
              <h6><i class="bi bi-info-circle-fill text-primary me-2"></i>Note:</h6>
              <p class="mb-0">Delivery times start after order processing (1 business day for in-stock items). Oversized IBC tank shipments may require additional time.</p>
            </div>
          </div>

          <!-- Delivery Process -->
          <div class="mb-5">
            <h2 class="mb-3 border-bottom pb-2">Our Delivery Process</h2>
            <div class="row g-4">
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                  <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 mb-3 d-inline-block">
                      <i class="bi bi-1-circle display-6 text-primary"></i>
                    </div>
                    <h5>Order Verification</h5>
                    <p>We confirm product availability and delivery address within 4 business hours</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                  <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 mb-3 d-inline-block">
                      <i class="bi bi-2-circle display-6 text-primary"></i>
                    </div>
                    <h5>Special Packaging</h5>
                    <p>IBC tanks secured on pallets, Sumandri Jhag weather-proofed</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                  <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 mb-3 d-inline-block">
                      <i class="bi bi-3-circle display-6 text-primary"></i>
                    </div>
                    <h5>Safe Delivery</h5>
                    <p>Forklift/unloading assistance available upon request</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Special Handling -->
          <div class="mb-5">
            <h2 class="mb-3 border-bottom pb-2">Special Handling Requirements</h2>
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="card h-100 border-warning">
                  <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Used Chemical Drums</h5>
                  </div>
                  <div class="card-body">
                    <ul>
                      <li>Triple-rinsed before shipping</li>
                      <li>Special labeling included</li>
                      <li>Requires hazardous material declaration for intercity transport</li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="card h-100 border-success">
                  <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-thermometer-sun me-2"></i>Sumandri Jhag</h5>
                  </div>
                  <div class="card-body">
                    <ul>
                      <li>Waterproof wrapping during monsoon season</li>
                      <li>Strapping to prevent unrolling</li>
                      <li>Kept in climate-controlled storage before dispatch</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Delivery FAQs -->
          <div class="mb-5">
            <h2 class="mb-3 border-bottom pb-2">Delivery FAQs</h2>
            <div class="accordion" id="deliveryAccordion">
              <div class="accordion-item">
                <h3 class="accordion-header" id="deliveryHeadingOne">
                  <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#deliveryCollapseOne">
                    Can I pick up my order from your warehouse?
                  </button>
                </h3>
                <div id="deliveryCollapseOne" class="accordion-collapse collapse show" aria-labelledby="deliveryHeadingOne" data-bs-parent="#deliveryAccordion">
                  <div class="accordion-body">
                    Yes! Self-collection is available at our Lahore facility:
                    <ul>
                      <li><strong>Address:</strong> Warehouse #12, Industrial Area, Lahore</li>
                      <li><strong>Hours:</strong> Mon-Sat 8:30AM-5:00PM</li>
                      <li><strong>Requirements:</strong> Bring order confirmation and CNIC</li>
                      <li><strong>Equipment:</strong> We provide forklift loading assistance</li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="accordion-item">
                <h3 class="accordion-header" id="deliveryHeadingTwo">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#deliveryCollapseTwo">
                    How are oversized IBC tanks shipped?
                  </button>
                </h3>
                <div id="deliveryCollapseTwo" class="accordion-collapse collapse" aria-labelledby="deliveryHeadingTwo" data-bs-parent="#deliveryAccordion">
                  <div class="accordion-body">
                    Our process for large IBC tanks:
                    <ol>
                      <li>Secured on wooden pallets with straps</li>
                      <li>Loaded via forklift onto flatbed trucks</li>
                      <li>Covered with waterproof tarpaulins</li>
                      <li>Delivered with unloading assistance (if requested)</li>
                    </ol>
                    <p class="mb-0"><strong>Note:</strong> Additional fees apply for special handling (PKR 3,000-7,500 depending on size).</p>
                  </div>
                </div>
              </div>
              <div class="accordion-item">
                <h3 class="accordion-header" id="deliveryHeadingThree">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#deliveryCollapseThree">
                    What if I'm not available when delivery arrives?
                  </button>
                </h3>
                <div id="deliveryCollapseThree" class="accordion-collapse collapse" aria-labelledby="deliveryHeadingThree" data-bs-parent="#deliveryAccordion">
                  <div class="accordion-body">
                    For Lahore deliveries:
                    <ul>
                      <li>Driver will call 1 hour before arrival</li>
                      <li>Can reschedule once at no charge</li>
                      <li>After-hours delivery available (+PKR 1,500 fee)</li>
                    </ul>
                    For other cities:
                    <ul>
                      <li>Courier will attempt delivery twice</li>
                      <li>Then hold at nearest depot for 3 days</li>
                      <li>Storage fees apply after holding period (PKR 500/day)</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Delivery Tracking -->
          <div class="mb-5">
            <h2 class="mb-3 border-bottom pb-2">Track Your Delivery</h2>
            <div class="row align-items-center">
              <div class="col-md-6">
                <div class="card bg-light">
                  <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-geo-alt-fill text-primary me-2"></i>Real-Time Tracking</h5>
                    <p>For orders outside Lahore, we provide:</p>
                    <ul>
                      <li>Courier tracking number via SMS/WhatsApp</li>
                      <li>Estimated delivery window updates</li>
                      <li>Driver contact information</li>
                    </ul>
                    <a href="/order-tracking" class="btn btn-primary">Track Your Order</a>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <img src="/images/delivery-map.jpg" alt="Pakistan Delivery Coverage" class="img-fluid rounded shadow">
              </div>
            </div>
          </div>

          <!-- Delivery Support -->
          <div class="alert alert-info">
            <h4 class="alert-heading">Delivery Support</h4>
            <p class="mb-1">Need help with your delivery? Contact our logistics team:</p>
            <ul class="mb-0">
              <li><i class="bi bi-telephone"></i> <a href="tel:03204904565">03204904565</a> (Press 1 for Deliveries)</li>
              <li><i class="bi bi-whatsapp"></i> <a href="https://wa.me/923204904565?text=Delivery%20Query%20for%20Order%20">WhatsApp Logistics Support</a></li>
              <li><i class="bi bi-envelope"></i> <a href="mailto:delivery@sumandricontainers.com">delivery@sumandricontainers.com</a></li>
              <li><i class="bi bi-clock"></i> Logistics Hours: 8AM-6PM (Mon-Sat)</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/_footer') %>