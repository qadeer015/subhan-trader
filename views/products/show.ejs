<%- include('../partials/_header') %>

<div class="card h-100">
        <img src="/uploads/products/<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
        <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">Rs. <%= product.price %></p>
            <p class="card-text text-muted"><%= product.condition %> | <%= product.category_name %></p>
        </div>
        <form method="post" action="/products/delete/<%= product.id %>" class="card-footer">
            <button class="btn btn-sm btn-danger">Delete</button>
        </form>
    </div>
    <%- include('../partials/_footer') %>
